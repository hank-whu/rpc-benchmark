<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:motan="http://api.weibo.com/schema/motan"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
   http://api.weibo.com/schema/motan http://api.weibo.com/schema/motan.xsd">


	<!-- 注册中心配置 使用不同注册中心需要依赖对应的jar包。 -->
	<motan:registry regProtocol="local" name="localRegistry"
		check="false" />

	<!-- motan协议配置 -->
	<motan:protocol default="true" name="motan"
		serialization="hprose" haStrategy="failfast" loadbalance="roundrobin"
		maxClientConnection="16" minClientConnection="16" />

	<!-- 通用referer基础配置 -->
	<motan:basicReferer requestTimeout="2000" accessLog="false"
		retries="1" group="motan-benchmark-rpc" module="motan-benchmark-rpc"
		application="myMotanBenchmark" protocol="motan" registry="localRegistry"
		id="motanClientBasicConfig" throwException="false" check="false" />

	<!-- 具体referer配置。使用方通过beanid使用服务接口类 -->
	<motan:referer id="userService" directUrl="benchmark-server:8080"
		interface="benchmark.service.UserService" connectTimeout="2000"
		requestTimeout="2000" basicReferer="motanClientBasicConfig" />
</beans>